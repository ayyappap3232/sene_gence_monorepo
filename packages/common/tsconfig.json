{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": false,
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noResolve": false,
    "sourceMap": true,
    "skipLibCheck": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true
  },
  "exclude": ["./node_modules/**/*"],
}
